<div class="container">
    <div class="post">
        <div class="header_post">
        <%= cl_image_tag(@piece.photo.key, width: 1200, height: 800, crop: :fill) %>
        </div>

        <div class="body_post">
            <div class="post_content">

                <h1><%= @piece.name %></h1>
                <p><%= @piece.description %></p>

                <div class="container_infos">
                    <div class="postedBy">
                        <span>artist</span>
                        <%= @piece.artist %>
                    </div>

                    <div class="container_tags">
                        <span>category</span>
                        <div class="tags">
                            <ul>
                                <li><%= @piece.category %></li>
                            </ul>
                        </div>
                        <span>price</span>
                        <div class="tags">
                            <ul>
                                <li><%= @piece.price %></li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
