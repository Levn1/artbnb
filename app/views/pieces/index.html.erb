<h1>this is the index of the pieces</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Height</th>
      <th>Length</th>
      <th>Price</th>
      <th>Category</th>
      <th>Artist</th>
      <th>Description</th>
      <th>User</th>
      <th colspan=“3”></th>
    </tr>
  </thead>
  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.name %></td>
        <td><%= piece.height %></td>
        <td><%= piece.length %></td>
        <td><%= piece.price %></td>
        <td><%= piece.category %></td>
        <td><%= piece.artist %></td>
        <td><%= piece.description %></td>
        <td><%= piece.user.email %></td>
        <td><%= link_to 'Show', piece %></td>
        <td>
          <% if policy(piece).edit? %>
            <%= link_to 'Edit', edit_piece_path(piece) %>
          <% end %>
        </td>
        <td>
          <% if policy(piece).destroy? %>
            <%= link_to 'Delete', piece, method: :delete, data: { confirm: "are you sure?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if policy(Piece).new? %>
  <%= link_to "New Piece", new_piece_path %>
<% end %>
